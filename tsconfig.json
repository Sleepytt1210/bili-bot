{
  "compilerOptions": {
    "outDir": "./built/src",
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
